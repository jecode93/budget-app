<div class="h-screen text-center relative">
  <%= render 'layouts/header', text: 'Sign up', text_second: "" %>

  <div class="mt-4">
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="border-1 border-gray mx-2">

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: 'p-3 w-full border-0 border-b-2
      placeholder:text-gray' %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'Email', class: 'p-3 w-full border-0 border-b-2
      placeholder:text-gray' %>
  </div>
  
  
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",
    placeholder: 'New password', class: 'p-3 w-full border-0 border-b-2
    placeholder:text-gray' %>
  </div>
  
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    placeholder: 'Password confirmation', class: 'p-3 w-full border-0 border-b-2
    placeholder:text-gray' %>
  </div>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum for password)</em>
  <% end %><br />
</div>

  <div class="absolute bottom-10 left-0 right-0">

  <div class="actions">
      <p
        class="bg-main text-white cursor-pointer p-2 rounded w-auto uppercase my-2 mx-4"
      >
    <%= f.submit "Sign up", class: 'cursor-pointer' %>
    </p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
</div>